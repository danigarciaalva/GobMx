<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card">

    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_menu_overflow_dark"
        android:layout_alignParentTop="true"
        android:id="@+id/list_item_historial_menu"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:scaleType="fitCenter"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/general_red_dark"
        android:textSize="18sp"
        android:id="@+id/list_item_comentario_user"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@string/font_general_light"
        android:layout_toLeftOf="@id/list_item_historial_menu"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/general_color_dark_gray"
        android:textSize="14sp"
        android:id="@+id/list_item_comentario_comment"
        android:layout_below="@id/list_item_comentario_user"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@string/font_general_light"
        android:layout_toLeftOf="@id/list_item_historial_menu"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/list_item_historial_separator"
        android:layout_below="@id/list_item_comentario_comment"
        android:background="@color/general_color_light_gray"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/list_item_historial_separator"
        android:gravity="center"
        android:padding="6dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
       <ImageView
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:id="@+id/list_item_comentario_icon_voted"
           />
        <TextView
            android:id="@+id/list_item_comentario_voted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="@string/font_general_light"
            android:textSize="18sp"/>
    </LinearLayout>
</RelativeLayout>